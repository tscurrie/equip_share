<div class="container">
	<%= link_to "Back", user_path, class: "btn btn-primary"%>

	<%= link_to "Add Item", add_item_path, class: "btn btn-primary"%>
	<% @items.each do |item|%>


		<div>
		  <h3><%= item.name.capitalize %></h3>
			<h5>Total requests for this item:</h5>
			<h5><%= item.requests.count %></h5>
		</div>
		<br>

	<%= link_to "Edit", edit_item_path(item), class: "btn btn-info"%>
	<%= button_to "Delete", item, method: :delete, class: "btn btn-danger" %>
	<% end %>
</div>
